#!/usr/bin/env bash
# -*- encoding: utf-8 -*-

TMPDIR="${HOME}/opt/nr-script/tmp"
if [ ! -d "$TMPDIR" ]; then
	mkdir -p "$TMPDIR"
fi

prog="$1"
progbn=$(basename $prog)
myname=$(cat ${HOME}/opt/nr-script/etc/USER)
fnamet="${TMPDIR}/${myname}_${progbn}_XXXXXX"
binn=$(mktemp -u ${fnamet})

ln -s `which "$prog"` "$binn"
$binn "${@:2}"
