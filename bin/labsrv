#!/usr/bin/env bash
# -*- encoding: utf-8 -*-

USERNAME='wjy';
IPADDR='222.200.185.12';
PORT='9501';

while getopts "s:" opt; do
	case "${opt}" in
	s)
		;;
	*)
		;;
	esac
done
shift $((OPTIND-1))

if [ $# -eq 0 ]; then
	ssh -p ${PORT} "${USERNAME}@${IPADDR}";

elif [ "$1" == 'push' ]; then
	scp -P ${PORT} "$2" "${USERNAME}@${IPADDR}":~/Downloads/;

elif [ "$1" == 'pull' ]; then
	scp -P ${PORT} "${USERNAME}@${IPADDR}":"$2" ~/Downloads/;

elif [ "$1" == 'clone' ]; then
	git clone "ssh://${USERNAME}@${IPADDR}/$2";
fi
