#!/usr/bin/env bash
# -*- encoding: utf-8 -*-

while getopts "s:" opt; do
	case "${opt}" in
	s)
		;;
	*)
		;;
	esac
done
shift $((OPTIND-1))

USERNAMES=('wjy' 'nr' 'wjy' 'nr' 'nr')
IPADDRS=('192.168.0.102' '192.168.0.102' '222.200.185.12' '222.200.185.12' '222.200.185.29')
PORTS=('22' '22' '9501' '9503' '22')

if [ $# -eq 0 ]; then
	for ((i=0; i<${#USERNAMES[@]}; i++)); do
		username=${USERNAMES[i]}
		ipaddr=${IPADDRS[i]}
		port=${PORTS[i]}
		printf "$i: USERNAME=%-4s IPADDR=%-16s PORT=$port\n" $username $ipaddr
	done
	read input
else
	input="$1"
fi

USERNAME=${USERNAMES[input]}
IPADDR=${IPADDRS[input]}
PORT=${PORTS[input]}
ssh -p ${PORT} "${USERNAME}@${IPADDR}";
