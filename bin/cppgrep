#!/usr/bin/env bash

if [ "$2" ]; then
	search_dir="$2";
else
	search_dir=".";
fi

patterns=('*.[ch]pp' '*.h' '*.cc' '*.cxx' '*.cu');

for ((i = 0; i < ${#patterns[@]}; i++)); do
	files=`find "${search_dir}" -name "${patterns[$i]}"`;
	if [ ! "$files" ]; then
		continue;
	fi
	grep --color=always -Hn "$1" $files;
done
